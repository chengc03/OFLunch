<h1>添加新商家</h1>
<br/>

<%= simple_form_for(@vendor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('confirm'), class: 'btn btn-primary' %>
    <%= link_to t('cancel'), vendors_path, class: 'btn' %>
  </div>
<% end %>

