
<table class='table table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>用户</th>
      <th>余额</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.user.email %></td>
        <td><%= balance.amount %></td>
        <td><%= link_to raw("<i class='icon-list-alt'> </i>  ") +'详情', balance, :class => "btn" %>
          <%= link_to raw("<i class='icon-plus'> </i>  ") +'充值', "#myModal#{balance.user_id}",  :class => "btn", "data-toggle" => "modal"  %></td>
        <div class="modal hide" id="myModal<%= balance.user_id %>">
          <%= form_for BalanceLog.new(:balance_id => balance.id, :amount => 100) do |f|%>
            <div class="modal-header">
              <a class="close" data-dismiss="modal">×</a>
              <h3><%= balance.user.email %>充值</h3>
            </div>
            <div class="modal-body">
              <%= f.hidden_field :balance_id %>
              <p><%= f.text_field :amount %></p>
            </div>
            <div class="modal-footer">
              <%= f.submit "充值", :class=>"btn btn-primary"%>
            </div>
          <% end%>
        </div>

      </tr>
    <% end %>
  </tbody>
</table>

