<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Serial num</th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= best_in_place menu_item, :name %></td>
    <td><%= best_in_place menu_item, :price %></td>
    <td><%= best_in_place menu_item, :serial_num %></td>
    <td>
      <%= link_to 'Destroy', vendor_menu_item_path(@vendor, menu_item),  confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

